package model.entities;

import java.text.SimpleDateFormat;
import java.util.Date;

public class Reservation {
	
	private Integer roomNumber;
	private Date checkin;
	private Date checkout;
	
	SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy");
	
	public Reservation() {
		
	}

	public Reservation(Integer roomNumber, Date checkin, Date checkout) {
		this.roomNumber = roomNumber;
		this.checkin = checkin;
		this.checkout = checkout;
	}

	public Integer getRoomNumber() {
		return roomNumber;
	}

	public void setRoomNumber(Integer roomNumber) {
		this.roomNumber = roomNumber;
	}

	public Date getCheckin() {
		return checkin;
	}

	public void setCheckin(Date checkin) {
		this.checkin = checkin;
	}

	public Date getCheckout() {
		return checkout;
	}
	public void setCheckout(Date checkout) {
		this.checkout = checkout;
	}
	public Integer duration() {
		int result = 0; 
		if(sdf.format(checkin).substring(3) == sdf.format(checkout).substring(3)) { //mesmo mÃªs e mesmo ano
			String checkinDate = sdf.format(checkin).substring(0,2);
			String checkoutDate = sdf.format(checkout).substring(0,2);
			result = Integer.parseInt(checkoutDate) - Integer.parseInt(checkinDate); 
			
		}
	}
	
	

}
